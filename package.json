{
  "title": "The Archiver",
  "name": "thearchiver",
  "version": "1.0.0",
  "description": "Easily Archive webpages",
  "main": "thearchiver.js",
  "author": "Cathal McNally",
  "icon": "icon.png",
  "icon64": "icon64.png",
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "license": "MIT",
  "preferences": [{
    "name": "prefs_archiveorg",
    "title": "Use Archive.org?",
    "description": "Enable archival with the wayback machine",
    "type": "bool",
    "value": true
    },
    {
    "name": "prefs_archiveis",
    "title": "Use Archive.is?",
    "description": "Enable archival with archive.is",
    "type": "bool",
    "value": true
    },
    {
    "name": "prefs_webcite",
    "title": "Use Webcite?",
    "description": "Enable archival with webcite.com",
    "type": "bool",
    "value": true
    },
    {
    "name": "prefs_email",
    "title": "E-mail",
    "description": "Required by Webcite for archival",
    "type": "string",
    "value": "Your E-Mail"
    }]
}
